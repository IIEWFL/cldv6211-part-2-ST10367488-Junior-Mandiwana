@model EventEase_System.Models.BookingDetailViewModel

<h1>Edit Booking</h1>

<form method="post" enctype="multipart/form-data">
    <div class="container">

        <div class="form-group">
            <label asp-for="EventName" class="control-label">Event Name</label>
            <input asp-for="EventName" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="EventDate" class="control-label">Event Date</label>
            <input asp-for="EventDate" type="date" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Description" class="control-label">Description</label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <label asp-for="VenueName" class="control-label">Venue Name</label>
            <input asp-for="VenueName" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Location" class="control-label">Location</label>
            <input asp-for="Location" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Capacity" class="control-label">Capacity</label>
            <input asp-for="Capacity" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="BookingDate" class="control-label">Booking Date</label>
            <input asp-for="BookingDate" type="date" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="SupportingFile" class="control-label">Upload File (optional)</label>
            <input asp-for="SupportingFile" type="file" class="form-control" />
        </div>

        <div class="form-group">
            <input asp-for="EventId" type="hidden" />
            <input asp-for="VenueId" type="hidden" />
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary mt-3">Update Booking</button>
            <a class="btn btn-warning" asp-action="Index">Back To List</a>
        </div>
    </div>
</form>
